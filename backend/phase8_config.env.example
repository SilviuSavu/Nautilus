# Phase 8 Autonomous Security Operations Configuration
# Copy this file to .env.phase8 and customize for your environment

# ============================================================================
# PHASE 8 CORE CONFIGURATION
# ============================================================================

# Enable/Disable Phase 8 Security Operations
PHASE8_ENABLE_PHASE8_SECURITY=true

# Redis Configuration for Phase 8 services
PHASE8_REDIS_HOST=localhost
PHASE8_REDIS_PORT=6379
PHASE8_REDIS_DB=0
# PHASE8_REDIS_PASSWORD=your_redis_password_here

# ============================================================================
# SERVICE ENABLEMENT FLAGS
# ============================================================================

# Cognitive Security Operations Center
PHASE8_ENABLE_COGNITIVE_SECURITY=true

# Advanced Threat Intelligence
PHASE8_ENABLE_THREAT_INTELLIGENCE=true

# Autonomous Security Response
PHASE8_ENABLE_AUTONOMOUS_RESPONSE=true

# Intelligent Fraud Detection
PHASE8_ENABLE_FRAUD_DETECTION=true

# Automated Security Orchestration
PHASE8_ENABLE_SECURITY_ORCHESTRATION=true

# ============================================================================
# MONITORING AND HEALTH CHECK CONFIGURATION
# ============================================================================

# Health check interval (seconds)
PHASE8_HEALTH_CHECK_INTERVAL=30

# Metrics collection interval (seconds)
PHASE8_METRICS_COLLECTION_INTERVAL=60

# Auto-recovery settings
PHASE8_AUTO_RECOVERY_ENABLED=true
PHASE8_MAX_RECOVERY_ATTEMPTS=3

# ============================================================================
# THREAT INTELLIGENCE CONFIGURATION
# ============================================================================

# Threat feed update interval (seconds) - 5 minutes default
PHASE8_THREAT_FEED_UPDATE_INTERVAL=300

# Threat intelligence sources (comma-separated)
PHASE8_THREAT_INTELLIGENCE_SOURCES=misp,virustotal,alienvault,threat_crowd,internal

# ============================================================================
# FRAUD DETECTION CONFIGURATION
# ============================================================================

# ML model update interval (seconds) - 1 hour default
PHASE8_FRAUD_MODEL_UPDATE_INTERVAL=3600

# Anomaly detection threshold (0.0 to 1.0)
PHASE8_ANOMALY_DETECTION_THRESHOLD=0.8

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
PHASE8_LOG_LEVEL=INFO

# Enable security audit logs
PHASE8_ENABLE_SECURITY_AUDIT_LOGS=true

# ============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# ============================================================================

# Development mode settings
PHASE8_DEVELOPMENT_MODE=false
PHASE8_ENABLE_TEST_ALERTS=false
PHASE8_MOCK_THREAT_FEEDS=false

# Performance testing
PHASE8_ENABLE_PERFORMANCE_METRICS=true
PHASE8_METRICS_RETENTION_DAYS=7

# ============================================================================
# ADVANCED SECURITY SETTINGS
# ============================================================================

# Security response timing
PHASE8_MAX_RESPONSE_TIME_MS=5000
PHASE8_ORCHESTRATION_TIMEOUT_SECONDS=300

# Behavioral analysis settings
PHASE8_ENABLE_BEHAVIORAL_ANALYSIS=true
PHASE8_BEHAVIORAL_BASELINE_DAYS=30
PHASE8_BEHAVIORAL_ANOMALY_THRESHOLD=0.7

# ML Model settings
PHASE8_ENABLE_ML_DETECTION=true
PHASE8_MODEL_TRAINING_ENABLED=true
PHASE8_MODEL_UPDATE_THRESHOLD=0.05

# ============================================================================
# INTEGRATION SETTINGS
# ============================================================================

# MessageBus integration
PHASE8_MESSAGEBUS_INTEGRATION=true
PHASE8_MESSAGEBUS_TOPIC_PREFIX=security

# Database integration
PHASE8_DATABASE_LOGGING=true
PHASE8_DATABASE_RETENTION_DAYS=90

# External API settings
PHASE8_ENABLE_EXTERNAL_APIS=true
PHASE8_API_RATE_LIMIT_PER_MINUTE=100

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# Production security
PHASE8_PRODUCTION_MODE=false
PHASE8_ENABLE_ENCRYPTION=true
PHASE8_REQUIRE_TLS=true

# Scaling settings
PHASE8_WORKER_PROCESSES=4
PHASE8_MAX_CONCURRENT_ANALYSES=50
PHASE8_QUEUE_SIZE_LIMIT=10000

# High availability
PHASE8_ENABLE_CLUSTERING=false
PHASE8_CLUSTER_NODE_ID=node1
PHASE8_CLUSTER_DISCOVERY_HOST=localhost:8080

# ============================================================================
# RESOURCE LIMITS
# ============================================================================

# Memory limits (MB)
PHASE8_MAX_MEMORY_MB=2048
PHASE8_MAX_CACHE_SIZE_MB=512

# CPU limits
PHASE8_MAX_CPU_PERCENT=80
PHASE8_THREAD_POOL_SIZE=10

# Network limits
PHASE8_MAX_CONNECTIONS=100
PHASE8_CONNECTION_TIMEOUT_SECONDS=30

# ============================================================================
# ALERTING CONFIGURATION
# ============================================================================

# Alert thresholds
PHASE8_CRITICAL_ALERT_THRESHOLD=0.9
PHASE8_HIGH_ALERT_THRESHOLD=0.7
PHASE8_MEDIUM_ALERT_THRESHOLD=0.5

# Notification settings
PHASE8_ENABLE_SLACK_NOTIFICATIONS=false
PHASE8_ENABLE_EMAIL_NOTIFICATIONS=false
PHASE8_ENABLE_WEBHOOK_NOTIFICATIONS=false

# PHASE8_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# PHASE8_EMAIL_SMTP_HOST=smtp.gmail.com
# PHASE8_EMAIL_SMTP_PORT=587
# PHASE8_EMAIL_FROM_ADDRESS=security@yourcompany.com
# PHASE8_EMAIL_TO_ADDRESSES=admin@yourcompany.com,security@yourcompany.com

# ============================================================================
# DOCKER COMPOSE ENVIRONMENT VARIABLES
# ============================================================================

# These variables are automatically used by docker-compose.yml
# when Phase 8 services are enabled

# Service replicas (for scaling)
PHASE8_COGNITIVE_SECURITY_REPLICAS=1
PHASE8_THREAT_INTELLIGENCE_REPLICAS=1
PHASE8_AUTONOMOUS_RESPONSE_REPLICAS=1
PHASE8_FRAUD_DETECTION_REPLICAS=1
PHASE8_SECURITY_ORCHESTRATION_REPLICAS=1

# Resource limits for containers
PHASE8_CPU_LIMIT=1
PHASE8_MEMORY_LIMIT=1g
PHASE8_MEMORY_RESERVATION=512m

# Volume mounts
PHASE8_LOGS_PATH=./logs/phase8
PHASE8_DATA_PATH=./data/phase8
PHASE8_MODELS_PATH=./models/phase8

# ============================================================================
